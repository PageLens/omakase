<%= form_for(@folder, remote: true) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title"><%= modal_form_title(@folder) %></h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('global.close') %></button>
    <%= f.submit t('global.save'), class: "btn btn-primary" %>
  </div>
<% end %>
