  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t('global.close') %></span></button>
    <h4 class="modal-title"><%= @link.name %></h4>
  </div>
  <div class="modal-body">
    <%= content_tag :p, @link.url, class: 'text-muted' %>
    <% if @link.keywords.present? %>
      <%= content_tag :p, class: 'keywords' do %>
        <% @link.keywords.each do |keyword| %>
          <%= content_tag :span, keyword, class: 'label label-info' %>
        <% end %>
      <% end %>
    <% end %>
    <%= simple_format @link.page.try(:content) || t(".no_content") %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('global.close') %></button>
  </div>
