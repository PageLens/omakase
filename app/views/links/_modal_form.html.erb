<%= form_for(@link, remote: true) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t('global.close') %></span></button>
    <h4 class="modal-title"><%= t('global.edit') %></h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :note %>
      <%= f.text_area :note, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tags %>
      <%= f.text_area :tags, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :folder %>
      <%= f.collection_select :folder_id, Folder.for_user(current_user), :id, :name, {include_blank: t(".no_folder")}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('global.close') %></button>
    <%= f.submit t('global.save'), class: "btn btn-primary" %>
  </div>
<% end %>
