<title><%= t("global.pagelens") %></title>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="<%= t("global.description") %>">
<meta property="og:title" content="<%= t("global.pagelens") %>" />
<meta property="og:type" content="website" />
<meta property="og:url" content="http://pagelens.com" />
<meta property="og:image" content="<%= image_url('pagelens_logo_500x170_white.png') %>" />
<meta property="og:site_name" content="PageLens" />
<meta property="og:description" content="<%= t("global.description") %>" />
<meta property="fb:app_id" content="<%= Rails.application.secrets.facebook["api_key"] %>" />
<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
<%- if user_signed_in? %>
<meta name="current-user" content="<%= current_user_json %>" />
<% end %>

<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<%# See https://developer.apple.com/library/ios/documentation/appleapplications/reference/safariwebcontent/configuringwebapplications/configuringwebapplications.html %>
<%= favicon_link_tag image_path('apple-touch-icon-152x152.png'), :rel => "apple-touch-icon", :type => "image/png", :sizes => "152x152" %>
<%= favicon_link_tag image_path('apple-touch-icon-120x120.png'), :rel => "apple-touch-icon", :type => "image/png", :sizes => "120x120" %>
<%= favicon_link_tag image_path('apple-touch-icon-76x76.png'), :rel => "apple-touch-icon", :type => "image/png", :sizes => "76x76" %>
<%= favicon_link_tag image_path('apple-touch-icon-60x60.png'), :rel => "apple-touch-icon", :type => "image/png" %>
<%= favicon_link_tag image_path('favicon.ico'), :rel => "shortcut icon" %>
