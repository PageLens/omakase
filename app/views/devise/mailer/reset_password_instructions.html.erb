<%= content_tag :h4, t('.hi', name: @resource.username) %>

<%= content_tag :p, t('.explanation') %>

<%= content_tag :p do %>
  <%= link_to t('.change_password'), redirect_url(u: edit_password_url(@resource, reset_password_token: @token), mc: MailTrackingInterceptor::MAIL_TRACKING_SIGNATURE) %>
<% end %>

<%= content_tag :small, t(".ignore") %>
