<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= content_tag :h2 do %>
        <%= t(".title") %>
        <%= content_tag :small, t(".explaination") %>
      <% end %>
    </div>
  </div>

  <%= devise_error_messages! %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :email, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
    </div>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :username, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :username, class: 'form-control input-lg' %>
    </div>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :password, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
    </div>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :password_confirmation, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <hr>
      <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-lg' %>
      <%= link_to t('global.sign_in'), new_user_session_path, class: 'btn-lg' %>
    </div>
  </div>

<% end %>

<%#= render "devise/shared/links" %>
